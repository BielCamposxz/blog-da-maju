<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/blog.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

</head>
<body>
    <header id="inicio">
        <!-- Navbar que aparece só ao rolar -->
        <nav class="navbar navbar-expand-lg fixed-top custom-navbar" id="scrollNavbar">
            <div class="container">
                <a class="navbar-brand fw-bold" href="#">
                    <i class="bi bi-flower1 me-2"></i> Blog da Maju
                </a>
                <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span><i class="bi bi-list"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#inicio">Início</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Sobre</a></li>
                        <li class="nav-item"><a class="nav-link" href="#blog">Blog</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contato">Contato</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Hero full-screen -->
        <section class="hero-refined d-flex align-items-center text-center vh-100 position-relative">
            <div class="overlay position-absolute top-0 start-0 w-100 h-100"></div>
            <div class="container position-relative">
                <h1 class="refined-title fade-in">🌸 Blog da Maju 🌸</h1>
                <p class="refined-subtitle fade-in delay">Beleza, inspiração e delicadeza em cada detalhe.</p>
            </div>
        </section>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-modern-simple" id="contato">
        <div class="container">
            <h2 class="footer-brand">🌸 Blog da Maju 🌸</h2>
            <p class="footer-subtitle">Beleza, inspiração e delicadeza em cada detalhe.</p>

            <div class="footer-social">
                <a href="https://www.instagram.com/majusequim/" target="_blank"><i class="bi bi-instagram"></i></a>
                <a href="https://www.tiktok.com/@@majusequim_/"
                   target="_blank">
                    <i class="bi bi-tiktok fs-4 text-primary"></i>
                </a>
                <a href="#" target="_blank"><i class="bi bi-twitter"></i></a>
            </div>

            <div class="footer-bottom">
                <p>© Blog da Maju — developed by gabriel</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
