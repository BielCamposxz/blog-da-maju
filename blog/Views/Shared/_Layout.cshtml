@using blog.Enum
@model PerfilPostModel

@{
    var httpContextAccessor = new HttpContextAccessor();
    var helper = new blog.Helper.sessaoDoUsuario(httpContextAccessor);
    var usuario = helper.BuscarSessaoDoUsuario();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/blog.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

</head>
<body>
    <header id="inicio" class="shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <!-- Navbar que aparece só ao rolar -->
        <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-white shadow-sm py-2">
            <div class="container d-flex justify-content-between align-items-center">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold text-danger d-flex align-items-center" href="#">
                    <i class="bi bi-flower1 me-2 fs-3"></i>
                    Blog da Maju
                </a>

                <!-- BOTÃO HAMBURGER PARA MOBILE -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarMenu">

                   
                    @if (usuario == null)
                    {
                        <!-- DROPDOWN PARA USUÁRIO NÃO LOGADO -->
                        <div class="dropdown ms-3">
                            <a class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark fw-medium"
                               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="d-flex align-items-center justify-content-center rounded-circle bg-light border shadow-sm me-1"
                                     style="width:42px; height:42px;">
                                    <i class="bi bi-person text-danger fs-5"></i>
                                </div>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-action="Index" asp-controller="Cadastro">
                                        <i class="bi bi-person-plus text-danger me-2"></i> Cadastrar-se
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-action="Index" asp-controller="Login">
                                        <i class="bi bi-box-arrow-in-right text-danger me-2"></i> Login
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else if (usuario.isAdmin)
                    {
                        <!-- DROPDOWN PARA ADMIN -->
                        <div class="dropdown ms-3">
                            <a class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark fw-medium"
                               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="@Url.Action("ExibirFotoPerfil", "Perfil", new { id = Model.Perfil.Id })"
                                     alt="Foto de perfil"
                                     class="rounded-circle me-2 border border-light shadow-sm"
                                     style="width:42px; height:42px; object-fit:cover;">
                                <span>Admin</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Perfil" asp-action="Index">
                                        <i class="bi bi-person-circle text-danger me-2"></i> Meu Perfil
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="AdminPage" asp-action="Index">
                                        <i class="bi bi-shield-lock-fill text-danger me-2"></i> Página Admin
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center text-danger" asp-action="Sair" asp-controller="Login">
                                        <i class="bi bi-box-arrow-right me-2"></i> Sair
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- USUÁRIO LOGADO NÃO ADMIN -->
                        <a class="btn btn-outline-danger fw-semibold ms-3 d-flex align-items-center" asp-action="Sair" asp-controller="Login">
                            <i class="bi bi-box-arrow-right me-1"></i> Sair
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container" style="min-height:500px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-maju text-center py-5 position-relative overflow-hidden">
        <!-- Fundo decorativo -->
        <div class="background-shape position-absolute top-0 start-50 translate-middle-x opacity-25"></div>

        <div class="container position-relative">
            <!-- Marca -->
            <h2 class="display-5 fw-bold text-primary-maju">🌸 Blog da Maju 🌸</h2>

            <!-- Redes sociais -->
            <div class="d-flex justify-content-center gap-4 mb-4">
                <a href="https://www.instagram.com/majusequim/" target="_blank" class="social-icon text-dark">
                    <i class="bi bi-instagram fs-3"></i>
                </a>
                <a href="https://www.tiktok.com/@@majusequim_/" target="_blank" class="social-icon text-dark">
                    <i class="bi bi-tiktok fs-3"></i>
                </a>
            </div>

            <!-- Frase sutil -->
            <p class="lead text-secondary mb-4">Beleza, inspiração e delicadeza em cada detalhe ✨</p>

            <!-- Copyright -->
            <small class="d-block text-muted">© <span id="year"></span> Blog da Maju — Developed by gabriel</small>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
