@model PostModel
@{
    Layout = "_LayoutPerfil";
}

<div class="post-page-bg py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <!-- CARD PRINCIPAL -->
                <div class="card post-card p-4 rounded-4 shadow-lg">

                    <h3 class="text-center mb-4 fw-bold">Nova Postagem</h3>

                    <form asp-controller="Perfil" asp-action="Enviar" method="post" enctype="multipart/form-data">

                        <!-- UPLOAD DE IMAGEM -->
                        <div class="mb-4 text-center position-relative">
                            <!-- Preview, inicialmente escondido -->
                            <div id="postPreviewWrapper" class="ratio ratio-1x1 rounded-4 shadow-sm overflow-hidden post-preview-wrapper" style="display: none; margin: auto;">
                                <img id="postPreview" src="#" class="w-100 h-100 rounded-3 object-fit-cover" alt="Preview do post">
                            </div>

                            <!-- Botão escolher foto -->
                            <div class="mt-3">
                                <label for="arquivo" class="btn-change-photo">Escolher Foto</label>
                                <input type="file" id="arquivo" name="arquivo" accept="image/*" capture="environment" class="d-none" onchange="previewPostImage(event)">
                            </div>
                        </div>


                        <!-- DESCRIÇÃO -->
                        <div class="mb-3">
                            <input type="text" name="Descricao" class="form-control form-control-lg rounded-pill" placeholder="Descrição do post" />
                        </div>

                        <!-- HASHTAGS -->
                        <div class="mb-4">
                            <input type="text" name="Hashtags" class="form-control form-control-lg rounded-pill" placeholder="Hashtags do post" />
                        </div>

                        <!-- BOTÃO ENVIAR -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-gradient btn-lg fw-bold rounded-pill">
                                Postar
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>


